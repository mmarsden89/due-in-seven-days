{{#each items as |item|}}
  {{log item}}
  <section data-id="{{item.id}}">
    <div class="card" style="width: 25vw; max-width: 200px; height: 25vw; max-height: 200px">
  <div class="card-body">
    <h5 class="card-title">{{limit item.title 15}}</h5>
    <p class="card-text">{{item.description}}</p>
    <button data-id="{{item.id}}" class="btn btn-danger">Remove</button>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
  </section>

{{/each}}
